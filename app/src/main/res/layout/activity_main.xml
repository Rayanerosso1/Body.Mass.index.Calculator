<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/imc2" />


    <EditText
        android:id="@+id/edittextname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:drawableStart="@drawable/baseline_person_24"


        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/backgroundround"
        android:gravity="center"
        android:hint="Digite seu nome"

        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textStyle="bold"

        />


    <EditText
        android:id="@+id/edittextPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextname"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/backgroundround"
        android:gravity="center"
        android:hint="Digite seu Peso"
        android:inputType="text"
android:drawableStart="@drawable/baseline_balance_24"
        android:maxLength="6"
        android:maxLines="1"
        android:padding="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittextAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextPeso"

        android:layout_marginStart="40dp"
android:drawableStart="@drawable/baseline_height_24"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/backgroundround"
        android:gravity="center"
        android:hint="Digite aqui sua Altura"
        android:inputType="text"

        android:maxLength="6"
        android:maxLines="1"
        android:padding="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bntCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Click"
        app:cornerRadius="15dp" />


</LinearLayout>